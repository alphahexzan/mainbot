function addmailip(ip, fromuser,text)
	if MAIL.IP[ip]==nil then
		MAIL.IP[ip]={}
	end
	local msg={}
	msg.from_ip=fromuser.sIP
	msg.from_nick=fromuser.sName
	msg.date = os.date("%Y/%m/%d %H:%M:%S");
	msg.text = text ;
	table.insert (MAIL.IP[ip],msg)
	SaveFile(MAIL,"MAIL",F_MAIL);
end
